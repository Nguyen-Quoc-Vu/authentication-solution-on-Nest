generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  hash      String
  email     String   @unique
  name      String?
  createAt  DateTime @default(now())
  updateAt  DateTime @updatedAt
  websiteId Int
  isAdmin   Boolean  @default(false)
  website   Website  @relation(fields: [websiteId], references: [id])

  @@map("users")
}

model Message {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  title       String
  description String?
  email       String
  phone       String
  websiteId   Int
  website     Website  @relation(fields: [websiteId], references: [id])

  @@map("messages")
}

model Website {
  id      Int       @id
  name    String
  Message Message[]
  User    User[]

  @@map("sites")
}
